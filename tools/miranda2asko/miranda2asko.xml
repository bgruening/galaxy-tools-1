<tool id="miranda2asko" name="Convert miRanda output to tabular" version="0.1">
    <description>for AskOmics</description>
    <requirements>
        <requirement type="package" version="5.22.2.1">perl</requirement>
    </requirements>

    <command detect_errors="exit_code"><![CDATA[
        perl '$__tool_directory__/miranda2asko.pl' -miranda '${miranda}' -mature '${mature}'
    ]]></command>

    <inputs>
        <param format="tsv,tabular" name="miranda" type="data" label="miRanda output" />
        <param format="fasta" name="mature" type="data" label="mature fasta file" />
    </inputs>

    <outputs>
        <data name="output" format="tsv" label="${tool.name} on ${on_string}" name="miranda in Askomics format">
            <discover_datasets pattern="mirna.asko.tsv" ext="tsv,tabular" visible="true" directory='$__tool_directory__' />
            <discover_datasets pattern="target.asko.tsv" ext="tsv,tabular" visible="true" directory='$__tool_directory__' />
        </data>
    </outputs>

    <tests>
        <test>
            <param name="miranda" ftype="tsv,tabular" value="miranda.out" />
            <param name="mature" ftype="fasta" value="mature.fa" />
            <output name="mirasko" ftype="tsv" file="target.asko.tsv" compare="sim_size" />
            <output name="mirasko" ftype="tsv" file="mirna.asko.tsv" compare="sim_size" />
        </test>
    </tests>

    <help>
        Generates a TSV compliant to AskOmics from the miRanda output.
    </help>

    <citations>
    </citations>
</tool>
